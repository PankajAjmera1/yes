<% layout('layout/boilerplate') %>

<div class="container">
    <h1>Gun Details</h1>
    <div class="mb-3">
        <label for="gunName" class="form-label">Gun Name</label>
        <input type="text" class="form-control" id="gunName" name="gunName" value="<%= gun.gunName %>" readonly>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" id="price" name="price" value="<%= gun.price %>" readonly>
    </div>
    <div class="mb-3">
        <label for="isLegal" class="form-label">Is Legal</label>
        <input type="text" class="form-control" id="isLegal" name="isLegal" value="<%= gun.isLegal ? 'Yes' : 'No' %>" readonly>
    </div>
    <div class="mb-3">
        <label for="automatic" class="form-label">Automatic</label>
        <input type="text" class="form-control" id="automatic" name="automatic" value="<%= gun.automatic ? 'Yes' : 'No' %>" readonly>
    </div>
    <div class="mb-3">
        <a href="/gun/<%= gun._id %>/edit" class="btn btn-primary">Edit</a>
        <form action="/gun/<%= gun._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this gun?')">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
