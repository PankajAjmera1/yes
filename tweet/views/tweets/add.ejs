<% layout('layout/boilerplate') %>

<div class="container">
    <h1>Add Tweet</h1>
    <form action="/tweet" method="POST">
        <div class="mb-3">
            <label for="tweetContent" class="form-label">Tweet Content</label>
            <textarea class="form-control" id="tweetContent" name="tweetContent" rows="3" required></textarea>
        </div>
        <!-- Optionally, you can add a hidden input field for the username if it's not taken from the session -->
        <!-- <input type="hidden" name="username" value="<%= currUser.username %>"> -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
